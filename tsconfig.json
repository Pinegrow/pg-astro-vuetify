{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/*"],
      "~~/*": ["*"]
    },
    "types": ["node", "vuetify"],
    "jsxImportSource": "preact",
    "strict": false,
    "allowJs": true
  },
  "include": [
    "themes/**/*",
    "vuetify.config.ts",
    "src/**/*",
    "auto-imports.d.ts",
    "components.d.ts",
    "composables.d.ts"
  ],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
